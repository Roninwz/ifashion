<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>


	<settings>
		<!-- 全局映射器启用缓存 -->
		<setting name="cacheEnabled" value="true"/>
		<!-- lazyLoadingEnabled:延迟加载启动，默认是false -->
		<setting name="lazyLoadingEnabled" value="true"/>
		<!-- aggressiveLazyLoading：积极的懒加载，false的话按需加载，默认是true -->
		<setting name="aggressiveLazyLoading" value="false"/>

		<!-- 开启二级缓存，默认是false -->
		<setting name="cacheEnabled" value="true"/>
	</settings>



	<!-- 配置别名 -->
	<typeAliases>
		<!--文章模块-->

		<typeAlias type="com.zua.ifashion.article.entity.Article" alias="Article"/>
		<typeAlias type="com.zua.ifashion.article.entity.ArticleReview" alias="ArticleReview"/>
		<typeAlias type="com.zua.ifashion.article.entity.ArticleType" alias="ArticleType"/>
		<typeAlias type="com.zua.ifashion.article.entity.Complain" alias="Complain"/>
		<typeAlias type="com.zua.ifashion.article.entity.ReplyReview" alias="ReplyReview"/>
		<!--在线定制模块 -->
		<typeAlias type="com.zua.ifashion.online.entity.Address" alias="Address"/>
		<typeAlias type="com.zua.ifashion.online.entity.Goods" alias="Goods"/>
		<typeAlias type="com.zua.ifashion.online.entity.GoodsImg" alias="GoodsImg"/>
		<typeAlias type="com.zua.ifashion.online.entity.GoodsReview" alias="GoodsReview"/>
		<typeAlias type="com.zua.ifashion.online.entity.GoodsType" alias="GoodsType"/>
		<typeAlias type="com.zua.ifashion.online.entity.Orders" alias="Orders"/>
		<typeAlias type="com.zua.ifashion.online.entity.ReceiveOrder" alias="ReceiveOrder"/>
		<!--论坛模块-->
		<typeAlias type="com.zua.ifashion.talk.entity.Discuss" alias="Discuss"/>
		<typeAlias type="com.zua.ifashion.talk.entity.DiscussReply" alias="DiscussReply"/>
		<typeAlias type="com.zua.ifashion.talk.entity.Question" alias="Question"/>
		<typeAlias type="com.zua.ifashion.talk.entity.ReplyQuestion" alias="ReplyQuestion"/>
		<typeAlias type="com.zua.ifashion.talk.entity.Topic" alias="Topic"/>

		<!--person模块-->

		<typeAlias type="com.zua.ifashion.person.entity.User" alias="User"/>
		<typeAlias type="com.zua.ifashion.person.entity.Admin" alias="Admin"/>
		<typeAlias type="com.zua.ifashion.person.entity.AdminRole" alias="AdminRole"/>
		<typeAlias type="com.zua.ifashion.person.entity.Magazine" alias="Magazine"/>
		<typeAlias type="com.zua.ifashion.person.entity.MagazineWithBLOBs" alias="MagazineWithBLOBs"/>
		<typeAlias type="com.zua.ifashion.person.entity.Message" alias="Message"/>
		<typeAlias type="com.zua.ifashion.person.entity.Module" alias="Module"/>
		<typeAlias type="com.zua.ifashion.person.entity.MyCollection" alias="MyCollect"/>
		<typeAlias type="com.zua.ifashion.person.entity.MyMessage" alias="MyMessage"/>
		<typeAlias type="com.zua.ifashion.person.entity.Rank" alias="Rank"/>
		<typeAlias type="com.zua.ifashion.person.entity.Role" alias="Role"/>
		<typeAlias type="com.zua.ifashion.person.entity.RoleModule" alias="RoleModule"/>
		<typeAlias type="com.zua.ifashion.person.entity.Tag" alias="Tag"/>
	</typeAliases>

</configuration>
